<Window x:Class="ExpenseTrackerApp.Views.CategoryListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista Kategorii" Width="400" Height="500"
        WindowStartupLocation="CenterOwner" Background="#F4F5F7">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Zarządzaj Kategoriami" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Categories}" Background="White" BorderBrush="#DDD" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" Width="330">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="14"/>

                        <Button Grid.Column="1" Content="USUŃ" 
                                Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Background="#D9534F" Foreground="White" Padding="10,5" FontWeight="Bold">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2" Content="ZAMKNIJ" Click="Close_Click" Margin="0,20,0,0" Height="40" Background="#888" Foreground="White"/>
    </Grid>
</Window>