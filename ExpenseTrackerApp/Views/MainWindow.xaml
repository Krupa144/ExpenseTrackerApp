<Window x:Class="ExpenseTrackerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menedżer Wydatków" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#f0f0f0" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Kurs EUR (NBP): " FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding CurrentEurRate, StringFormat=N4}" FontSize="16" Margin="5,0,0,0" Foreground="DarkGreen"/>
                <TextBlock Text=" PLN" FontSize="16"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Expenses}" SelectedItem="{Binding SelectedExpense}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Tytuł" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Kwota (PLN)" Binding="{Binding Amount, StringFormat=C2}" Width="120" FontWeight="Bold"/>
                <DataGridTextColumn Header="Kwota (EUR)" Binding="{Binding AmountInEur, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="+ Dodaj Wydatek" Command="{Binding AddExpenseCommand}" Width="120" Height="35" Margin="0,0,10,0" Background="#007ACC" Foreground="White"/>
            <Button Content="Usuń Wybrane" Command="{Binding DeleteExpenseCommand}" Width="120" Height="35" Background="#CC3333" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>