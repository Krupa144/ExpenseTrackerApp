<Window x:Class="ExpenseTrackerApp.Views.ExpenseFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowy Wydatek" 
        Width="420" 
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border Background="#F4F5F7" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#BBBBBB" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Dodaj Wydatek" FontSize="22" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
                <TextBlock Text="Wypełnij szczegóły transakcji" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">

                <TextBlock Text="NAZWA" FontSize="11" FontWeight="SemiBold" Foreground="#888" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Title}" Padding="10" Margin="0,0,0,15" BorderBrush="#DDD" BorderThickness="1" Background="White" Height="40" VerticalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="KATEGORIA" FontSize="11" FontWeight="SemiBold" Foreground="#888" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" 
                          Padding="10" Margin="0,0,0,15" Height="40" VerticalContentAlignment="Center" Background="White" BorderBrush="#DDD">
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="KWOTA" FontSize="11" FontWeight="SemiBold" Foreground="#888" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding AmountString}" Padding="10" Height="40" VerticalContentAlignment="Center" BorderBrush="#DDD" Background="White">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="WALUTA" FontSize="11" FontWeight="SemiBold" Foreground="#888" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableCurrencies}" SelectedItem="{Binding SelectedCurrency}" Height="40" VerticalContentAlignment="Center" Background="White" BorderBrush="#DDD">
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <TextBlock Text="DATA" FontSize="11" FontWeight="SemiBold" Foreground="#888" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding Date}" Height="40" Margin="0,0,0,25" VerticalContentAlignment="Center" Background="White" BorderBrush="#DDD"/>

            </StackPanel>

            <StackPanel Grid.Row="2">
                <Button Content="ZAPISZ" Click="Save_Click" Height="45" 
                        Background="#4F46E5" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Text="Anuluj" Foreground="#888" HorizontalAlignment="Center" Margin="0,15,0,0" Cursor="Hand" MouseLeftButtonDown="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>