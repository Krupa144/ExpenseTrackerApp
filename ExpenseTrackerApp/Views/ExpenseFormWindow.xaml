<Window x:Class="ExpenseTrackerApp.Views.ExpenseFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowy Wydatek" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Tytuł:" FontWeight="Bold"/>
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Margin="0,5,0,15" Padding="5"/>

        <TextBlock Text="Kwota (PLN):" FontWeight="Bold"/>
        <TextBox Text="{Binding AmountString, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Margin="0,5,0,15" Padding="5"/>

        <TextBlock Text="Data:" FontWeight="Bold"/>
        <DatePicker SelectedDate="{Binding Date}" Margin="0,5,0,25" Padding="5"/>

        <Button Content="ZAPISZ" Click="Save_Click" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
    </StackPanel>
</Window>